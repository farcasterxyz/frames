{
  "workspaces": {
    "packages/*": {
      "entry": "src/index.ts",
      "project": "**/*.ts"
    },
    "packages/frame-host": {
      "entry": "src/index.ts",
      "project": "**/*.ts",
      "ignore": ["src/comlink/**/*.ts"]
    },
    "examples/vanilla": {
      "entry": ["src/main.ts", "frame/index.ts"]
    },
    "site": {
      "ignoreDependencies": ["@farcaster/frame-core", "@farcaster/frame-sdk"],
      "ignore": ["vocs.config.ts"]
    }
  }
}
